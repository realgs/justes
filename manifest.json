{
  "name": "domodi-discounts",
  "version": "0.1",
  "author": "Mateusz Magda",
  "manifest_version": 2,
  "browser_action": {
     "default_icon": "images/icon-48.png",
     "default_title": "Domodi discounts"
  },
  "icons": { "16": "images/icon-16.png",
           "48": "images/icon-48.png",
          "128": "images/icon-128.png" },
